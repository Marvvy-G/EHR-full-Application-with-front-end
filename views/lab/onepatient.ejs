<%- include("../partials/header") %>
<!-- sidenav -->
<%- include("../partials/sidenav/labsidenav") %>

<main class="mt-5 pt-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 fw-bold fs-3">DashBoard</div>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-primary h-100">
                    <div class="card-header">
                        <span><i class="bi bi-clipboard2-heart"></i></span>
                        Doctors Note</div>
                    <div class="card-body">
                      <h5 class="card-title">TEST</h5>
                      <p class="card-text"><%=patient.labOrder%></p>
                    </div>
                  </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-secondary h-100">
                    <div class="card-header">
                        <span><i class="bi bi-table"></i></span>
                        <%=patient.name%>'s Prescription</div>
                    <div class="card-body">
                      <h5 class="card-title"> Prescription</h5>
                      <p class="card-text"><%=patient.visit.Prescription%></p>
                    </div>
                  </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-warning h-100">
                    <div class="card-header">
                        <span><i class="bi bi-calendar2-week"></i></span>
                        Next Visit</div>
                    <div class="card-body">
                      <h5 class="card-title"><%=patient.name%>'s Next Visit</h5>
                      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                  </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-white bg-danger h-100">
                    <div class="card-header">
                        <span><i class="bi bi-heart-pulse"></i></span>
                        Health</div>
                    <div class="card-body">
                      <h5 class="card-title"><%=patient.name%>'s Health</h5>
                      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                  </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Charts
                    </div>
                    <div class="card-body">
                        <canvas id="lineChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Analytics
                    </div>
                    <div class="card-body">
                        <canvas id="barChart"></canvas>
                    </div>
                </div>
            </div>
        </div>  
    </div>
    </div>
    
    <div class="container-fluid">
        <div class="header mt-3">
            <h2 class="patient"><%=patient.name%></h2> 
         </div>
        <table>
            <tr>
                <th>Photo</th>
                <td><img src="data:image/<%=patient.photo%>"></td>
            </tr>
            <tr>
                <th>Name</th>
                <td><%=patient.name%></td>
            </tr>
            <tr>
                <th>Age</th>
                <td><%=patient.age%></td>
            </tr>
            <tr>
                <th>Number</th>
                <td><%=patient.number%></td>
            </tr>
            <tr>
                <th>ID</th>
                <td><%=patient.id%></td>
            </tr>
            <tr>
                <th>BloodGroup</th>
                <td><%=patient.bloodgroup%></td>
            </tr>
            <tr>
                <th>Genotype</th>
                <td><%=patient.genotype%></td>
            </tr>
            <tr>
                <th>Underlying Illness</th>
                <td><%=patient.underlyingillness%></td>
            </tr>
            <tr>
                <th>Patient Vitals</th>
                <td>pulse:<%=patient.vital.pulse%> </td>
            </tr>
        </table>
    
</main>

<script src="js/script.js"></script>
<%- include("../partials/footer") %>