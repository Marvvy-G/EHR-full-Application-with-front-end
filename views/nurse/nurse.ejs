<%- include("../partials/header") %>

<div class="mt-5 pt-3">
    <h1 style="text-align: center;">
        Record Vital Signs of <%= patient.name %>
    </h1>
    
     <div class="row">

        <div style="width: 30%; margin: 30px auto; ">
            <form action="/api/history/vital/<%= patient._id %>" method="POST">
                <div class="form-group"> 
                    <input class="form-control" type="text" name="temperature" placeholder="temperature" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="bloodpressure" placeholder="bloodpressure" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pulse" placeholder="pulse" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="oxygensat" placeholder="oxygen-saturation" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="heartrate" placeholder="heartrate" >
                </div>
               <div class="form-group" >
                    <button class="btn btn-lg btn-danger btn-block">Submit</button>
               </div>
                </form>
                <br>
                <a href="/api/history/nurse/showpatients/<%= patient._id %>">DashBoard</a>
                <a href="/api/history/show/showpatients">Database</a>
        </div>
     </div>
</div>

<%- include("../partials/footer") %>